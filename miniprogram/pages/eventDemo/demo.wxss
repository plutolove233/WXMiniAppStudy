/* pages/eventDemo/demo.wxss */
.outer{
	width: 400rpx;
	height: 400rpx;
	background-color: orange;
}
.inner{
	width: 200rpx;
	height: 200rpx;
	background-color: red;
}
.tab-control{
	display: flex;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.tab-control .headline{
	flex: 1;
}
.tab-control .headline.active{
	background-color: skyblue;
}
.tab-control .headline.active .title{
	border-bottom:	3px solid red;
}

.mark{
	width: auto;
	height: 400rpx;
	background-color: #ff0;
}
.mark .title{
	width: 200px;
	height: 200rpx;
	background-color: red;
}